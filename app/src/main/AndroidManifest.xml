<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!-- برای تنظیم برنامه به عنوان پیش‌فرض در اندروید قدیمی‌تر -->
    <uses-permission android:name="android.permission.WRITE_SMS" tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
     <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- برای باز کردن تنظیمات برنامه -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <!-- برای اندروید ۹ و بالاتر -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- برای Foreground Service در اندروید ۱۴+ -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySMS"
        tools:targetApi="31">

        <!-- ایجاد کانال نوتیفیکیشن -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="sms_received_channel" />

        <activity
            android:name=".ui.theme.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MySMS"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- هندل کردن کلیک روی نوتیفیکیشن -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="smsto" />
                <data android:host="open_chat" />
            </intent-filter>

            <!-- intent-filter برای تنظیم برنامه به عنوان برنامه پیش‌فرض پیامک -->
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_DELIVER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="smsto" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="sms" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="smsto" />
                <data android:scheme="sms" />
                <data android:scheme="mms" />
            </intent-filter>

            <!-- meta-data برای قابلیت برنامه پیش‌فرض پیامک -->
            <meta-data
                android:name="android.app.role.SMS"
                android:value="true" />

            <!-- Meta-data برای splash screen -->
            <meta-data
                android:name="android.app.splash_screen_drawable"
                android:resource="@drawable/ic_launcher_foreground" />

        </activity>



        <!-- Receiver برای دریافت پیام‌ها -->
        <receiver
            android:name=".ui.theme.SmsReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">

            <intent-filter android:priority="2147483647">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
                <action android:name="android.provider.Telephony.SMS_DELIVER" />
            </intent-filter>

        </receiver>

        <!-- Receiver برای Actionهای نوتیفیکیشن -->
        <receiver
            android:name=".ui.theme.NotificationActionReceiver"
            android:exported="false"
            android:enabled="true">
            <intent-filter>
                <action android:name="COPY_CODE_ACTION" />
                <action android:name="QUICK_REPLY_ACTION" />
                <action android:name="MARK_READ_ACTION" />
            </intent-filter>
        </receiver>

        <!-- سرویس پس‌زمینه ۳۰ ثانیه‌ای -->
        <service
            android:name=".ui.theme.BackgroundSmsService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="shortService" />

        <!-- سرویس Foreground جدید برای دریافت پیام حتی وقتی اپ بسته است -->
        <service
            android:name=".ui.theme.ForegroundSmsService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync|shortService"
            android:stopWithTask="false" />

        <!-- سرویس JobScheduler -->
        <service
            android:name=".ui.theme.SmsJobService"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="false" />

        <!-- سرویس دریافت SMS (جدید) -->
        <service
            android:name=".ui.theme.SmsReceiverService"
            android:exported="true"
            android:permission="android.permission.BIND_CARRIER_SERVICES">
            <intent-filter android:priority="1000">
                <action android:name="android.provider.Telephony.SMS_DELIVER" />
            </intent-filter>
        </service>

        <!-- سرویس گوش‌دهنده به نوتیفیکیشن‌ها برای حذف نوتیفیکیشن‌های تکراری -->
        <service
            android:name=".ui.theme.NotificationListener"
            android:label="MySMS"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

    </application>

</manifest>